<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_main_img"
            android:layout_width="@dimen/main_size"
            android:layout_height="@dimen/main_size"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_announcement_black_24dp" />

        <TextView
            android:id="@+id/item_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_size_font"
            android:text="@string/imc" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>